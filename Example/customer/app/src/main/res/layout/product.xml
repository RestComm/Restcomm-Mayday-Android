<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout_customer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background_header">

            <ImageView
                android:id="@+id/imageViewlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/spanlogo" />

            <ImageView
                android:id="@+id/imageView_customer_mayday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/mayday" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/imageViewlogo"
                android:layout_marginStart="20dp"
                android:src="@drawable/navbar" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout1">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="200dp">


                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"></android.support.v4.view.ViewPager>


                        <RelativeLayout
                            android:id="@+id/viewPagerIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_below="@+id/choose_package_viewPager"
                            android:layout_marginBottom="8dp">

                            <LinearLayout
                                android:id="@+id/viewPagerCountDots"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">


                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/linearLayout2"
                        android:background="@drawable/background_customer"
                        android:padding="7dp">


                        <TextView
                            android:id="@+id/our_products"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="16dp"
                            android:text="@string/our_products"
                            android:textColor="@color/Black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/view_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="25dp"
                            android:text="@string/view_all"
                            android:textColor="@color/BlueColor"
                            android:textSize="17dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/relativeLayout3"
                        android:layout_centerVertical="true"
                        android:background="@color/White"
                        android:orientation="horizontal"
                        android:padding="10dp">


                        <ImageView
                            android:id="@+id/imageView_product"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/product_imgextra" />


                        <LinearLayout
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@color/DarkGrey"
                            android:orientation="horizontal"></LinearLayout>


                        <ImageView
                            android:id="@+id/imageView_product_two"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/product_imgextra2" />

                        <LinearLayout
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:background="@color/DarkGrey"
                            android:orientation="horizontal"></LinearLayout>


                        <ImageView
                            android:id="@+id/imageView_product_three"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/product_img_extra1" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayout3"
                        android:background="@drawable/background_customer"
                        android:padding="7dp">

                        <TextView
                            android:id="@+id/my_products"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="17dp"
                            android:text="@string/my_products"
                            android:textColor="@color/Black"
                            android:textSize="15sp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_below="@+id/relativeLayout4"
                        android:background="#F8F5EE"
                        android:orientation="horizontal"
                        android:padding="10dp">


                        <ImageView
                            android:id="@+id/imageView_product_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img1" />

                        <ImageView
                            android:id="@+id/imageView_product_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/img2" />

                        <ImageView
                            android:id="@+id/imageView_product_six"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/img3" />

                        <ImageView
                            android:id="@+id/imageView_product_seven"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/img4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_below="@+id/linearLayout4"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/offerbanner" />
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>